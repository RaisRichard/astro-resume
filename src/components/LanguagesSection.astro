---
import { type CollectionEntry } from "astro:content";
import { Section } from ".";

interface Props {
	entries: CollectionEntry<"languages">[];
	title: string;
}

const { entries, title } = Astro.props;
---

<Section title={title}>
    <div class="flex text-sm gap-4">
		{entries.map((entry) => {
            const data = entry.data;

			return (
				<div class="flex flex-col px-4">
                    <h3 class="font-bold">{data.language}</h3>
                    <p>{data.level}</p>
					<span itemprop="knowsLanguage" class="hidden">{data.tag}</span>
                </div>
			)
		})}
	</div>
</Section>