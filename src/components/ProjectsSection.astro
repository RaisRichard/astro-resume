---
import { type CollectionEntry } from "astro:content";
import { Dot } from "lucide-react";
import { Section } from ".";

interface Props {
	entries: CollectionEntry<"projects">[];
	title: string;
}

const { entries, title } = Astro.props;
---

<Section title={title}>
	<div>
		{
			entries.map((entry) => (
				<div class="mt-2">
					<h3 class="text-sm font-bold ml-4">{entry.data.categoryName}</h3>
					{entry.data.projects.map((project) => (
						<div class="flex items-center px-6 py-0.5 odd:bg-richgreen-500/5">
							<Dot size={24} className="grow-0 shrink-0" />
							<p class="text-sm">{project}</p>
						</div>
					))}
				</div>
			))
		}
	</div>
</Section>
